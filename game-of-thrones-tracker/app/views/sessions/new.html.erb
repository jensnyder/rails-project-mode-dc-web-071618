<h1>Login</h1>

<div class="error">
  <%= flash.notice %>
</div>

<div class="form">
  <h6><%= form_tag '/login' do %>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <div class="form-button"><%= submit_tag "Login" %></div>
    <% end %>
  </h6>
</div>
