<h1><%= @character.name %></h1>
<% if @character.house %>
  House: <%= link_to @character.house.name, house_path(@character.house) %><br>
<% end %>
<% if !@character.titles.empty? %>
Title(s): <% @character.titles.each do |title| %>
    <li><%= title %></li>
  <% end %>
<% end %><br>
Gender:
  <% if @character.male == true %>
    male
  <% else %>
    female
  <% end %><br>
<% if @character.culture %>
  Culture: <%= @character.culture %>
<% end %><br>
<br>
<% if @character.image_link %>
<img src=<%= "https://api.got.show#{@character.image_link}"%>>
<% end %><br>

<br><button><%= link_to "Add to My Characters", "/user_characters/new/#{@character.id}" %><br></button>

<button><%= link_to "All Characters", characters_path %></button>
